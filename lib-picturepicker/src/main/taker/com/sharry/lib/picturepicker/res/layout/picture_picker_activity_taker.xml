<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:orientation="vertical">

    <com.sharry.lib.camera.SCameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:autoFocus="true"
        app:layout_constraintTop_toTopOf="parent" />

    <com.sharry.lib.picturepicker.toolbar.SToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/cameraView"
        app:layout_constraintRight_toRightOf="@id/cameraView"
        app:layout_constraintTop_toTopOf="@+id/cameraView"
        app:statusBarStyle="Transparent" />

    <com.sharry.lib.picturepicker.RecordProgressButton
        android:id="@+id/recordButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivTakePicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <com.sharry.lib.media.player.SVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tool:visibility="visible" />

    <ImageView
        android:id="@+id/ivDenied"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/recordButton"
        app:layout_constraintEnd_toStartOf="@id/recordButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/recordButton"
        app:srcCompat="@drawable/ic_activity_video_record_denied"
        tool:visibility="visible" />

    <ImageView
        android:id="@+id/ivGranted"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/recordButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recordButton"
        app:layout_constraintTop_toTopOf="@id/recordButton"
        app:srcCompat="@drawable/ic_activity_video_record_granted"
        tool:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>