<resources>

    <style name="PicturePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF00b0ff</item>
        <item name="colorPrimaryDark">#FF00b0ff</item>
        <item name="colorAccent">#FF64b6f6</item>
    </style>

    <!--透明主题-->
    <style name="PictureWatcherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--Dialog 动画, 从底部飞入效果-->
    <style name="PicturePickerBottomMenuDialogAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">
            @anim/libpicturepicker_translation_b2t_dur300_delta100
        </item>
        <item name="android:windowExitAnimation">
            @anim/libpicturepicker_translation_t2b_dur300_delta100
        </item>
    </style>

</resources>
