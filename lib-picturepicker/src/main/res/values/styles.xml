<resources>

    <style name="PicturePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF00b0ff</item>
        <item name="colorPrimaryDark">#FF00b0ff</item>
        <item name="colorAccent">#FF64b6f6</item>
    </style>

    <!--透明主题-->
    <style name="PictureWatcherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--Dialog 动画, 从底部飞入效果-->
    <style name="AnimTranslationVertical" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_translation_vertical_b2t</item>
        <item name="android:windowExitAnimation">@anim/anim_translation_vertical_t2b</item>
    </style>

    <!--Dialog 动画, 窗口抖动效果-->
    <style name="AnimDither" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dither_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dither_out</item>
    </style>

</resources>
